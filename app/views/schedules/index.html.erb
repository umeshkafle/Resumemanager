<div class="container">
  <nav id="table-tabs">
      <ul class="nav nav-tabs">
        <li><%= link_to "CV Lists", root_url%></li>
        <li><%= link_to "Shorted CVs", shortlists_path%></li>
        <li class="active"><%= link_to "Interview Schedule", shortlist_schedules_path(shortlist.id)%></li>
      </ul>
      
  </nav>
  <div class="table-responsive">
    <div id="cv-header">
      <h3>Scheduled Interview List</h3> 
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form> 
    </div>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="col-md-1">S.N</th>
          <th>Applicant Email</th>
          <th>Intervies Date</th>
          <th>Interview Time</th>
          <th>Attachment</th>
          <th>Scheduling</th>
          <th>Summary</th>
        </tr>
      </thead>
      <tbody>
        <% @schedules.each do |schedule| %>
           <td class="col-md-2" ><%= @schedules.index(schedule) + 1%></td>
           <td class="col-md-2"><%= schedule.from %></td>
           <td class="col-md-2"><%= schedule.interview_date %></td>
           <td class="col-md-2"><%= schedule.interview_time %></td>
           </td class="col-md-2"><%= schedule.attachment %></td>
           
           
           <td class="col-md-2">
              <%= link_to 'Schedule Interview', new_schedule_path, remote: true, class: "btn btn-info" %>
              <%= link_to "Add", "#", class: "btn btn default"%><span class="glyphicon glyphicon-plus"></span>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<div class="modal fade" id="newModal">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>


