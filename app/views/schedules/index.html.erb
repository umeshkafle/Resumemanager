<%= render 'pagenav'%>	

	<div class="table-responsive">
    <%= render 'tableheader'%>
	    <table class="table table-striped table-bordered table-hover">
	      <thead>
	        <tr>
	          <th class="col-md-1">S.N</th>
	          <th>Applicant Email</th>
	          <th>Interview Date/Time</th>
	          <th>Attachment</th>
	          <th>Scheduling</th>
	          <th>Summary</th>
	        </tr>
	      </thead>
	      <tbody>
	      

	      <% @schedules.each do |schedule|%>
	      	<tr>
	      	
	          <td class="col-md-1"><%= @schedules.index(schedule) + 1%></td>
	          <td class="col-md-2"><%= @curriculumvitae.from %></td>
	          <td class="col-md-2"><%= schedule.interview_time.localtime %></td>
	          <td class="col-md-2"><%= schedule.attachment %></td>
	          <td class="col-md-2"> <%= link_to 'Re-Schedule Interview', edit_curriculumvitae_schedule_path(@curriculumvitae, schedule.id), class: "btn btn-info", remote: true %>
	          </td>
	          
	          <td class="col-md-2"><%= link_to "Add", new_curriculumvitae_summary_path(@curriculumvitae), class: "btn btn-info"%>  <span class="glyphicon glyphicon-plus"></span>
	          	<%= link_to "View", curriculumvitae_summaries_path(@curriculumvitae, @summary), class: "btn btn-success"%>  <span class="glyphicon glyphicon-eye-open"></td>
	        </tr>
	      <%end%>
	      </tbody>
	    </table>
  </div>
  <div id="pop-up-modal">
	</div>
	<%= will_paginate @schedules%>

