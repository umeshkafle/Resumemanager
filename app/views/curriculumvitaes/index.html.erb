
<div class="container">
  <nav id="table-tabs">
      <ul class="nav nav-tabs">
        <li class="active"><%= link_to "CV Lists", curriculumvitaes_path%></li>
        <li><%= link_to "Shorted CVs", shortlists_path %></li>
        <li><%= link_to "Interview Schedule", shortlist_schedule_path(shortlist.id) %></li>
      </ul>
      
  </nav>
  <div class="table-responsive">
    <div id="cv-header">
      <h3>CVs Lists</h3> 
      <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
      </form> 
    </div>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="col-md-1">S.N</th>
          <th>Send_By</th>
          <th>Received_on</th>
          <th>Attachment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @curriculumvitaes.each do |curriculumvitae|%>
          <tr>
           <td class="col-md-2" ><%= @curriculumvitaes.index(curriculumvitae) + 1 %></td>
           <td class="col-md-2"><%=curriculumvitae.from %></td>
           <td class="col-md-2"><%= curriculumvitae.updated_at%></td>
           <td class="col-md-2"></td>
           
           
           <td class="col-md-2">
              <%= link_to 'ShortList', curriculumvitae_path(curriculumvitae.id), method: :patch, class: "btn btn-info" %>
              <%= link_to 'Destroy', curriculumvitae_path(curriculumvitae.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
           </td>
          </tr>
         <%end%>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @curriculumvitaes%>